@model MVCOnlineTicariOtomasyon.Models.Class.SaleTransaction
@{
    ViewBag.Title = "SatisGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("SatisGuncelle", "Satis", FormMethod.Post))
{
<form class="form-group" method="post">

    @Html.HiddenFor(x => x.TransactionID)
    <br />

    @Html.Label("Adet")
    @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })

    <br />
    @Html.Label("Ürün")

    @Html.DropDownListFor(x => x.ProductID, (List<SelectListItem>)ViewBag.satisDeger1, new { @class = "form-control" })

    <br />
    @Html.Label("Müşteri")

    @Html.DropDownListFor(x => x.CurrentID, (List<SelectListItem>)ViewBag.satisDeger2, new { @class = "form-control" })

    <br />
    @Html.Label("Personel")

    @Html.DropDownListFor(x => x.EmployeeID, (List<SelectListItem>)ViewBag.satisDeger3, new { @class = "form-control" })

    <br />

    @Html.Label("Fiyat")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })

    <br />

    @Html.Label("Toplam Tutar")
    @Html.TextBoxFor(x => x.TotalAmount, new { @class = "form-control" })

    <br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.SaleDate, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>
}
