@model MVCOnlineTicariOtomasyon.Models.Class.Employee
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{

    <div class="form-group">
        @Html.HiddenFor(x => x.EmployeeID)
        @Html.Label("Personel Ad")
        @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(x => x.EmployeeSurname, "", new { @color = "color:red" })*@
        <br />
        @Html.Label("Soyadı")
        @Html.TextBoxFor(x => x.EmployeeSurname, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(x => x.CurrentSurname, "", new { @color = "color:red" })*@
        <br />
        @Html.Label("Görsel")
        @Html.TextBoxFor(x => x.EmployeeImage, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.DeparmentId,(List<SelectListItem>)ViewBag.personelDgr ,new { @class = "form-control" })

        
        
        <br />

        <br />
        <button class="btn btn-primary" style="background-color:blueviolet">Güncelle</button>

    </div>

}
