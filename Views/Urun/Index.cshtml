@using MVCOnlineTicariOtomasyon.Models.Class
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Urun Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>DÜZENLE</th>
        <th>STOKTAN DÜŞ</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            <td>@item.Brand</td>
            <td>@item.Stock</td>
            <td>@item.PurchasePrice</td>
            <td>@item.SalePrice</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="~/thumber\@item.ProductImage" class="d-block photo-item" data-fancybox="gallery">
    <img src="~/thumber\@item.ProductImage" height="20">
    <div class="photo-text-more">
        <span class="icon icon-search"></span>
    </div>
</td>
            <td><a href="~/Urun/UrunGetir/@item.ProductID" class="btn btn-danger">Düzenle</a></td>
            <td><a href="~/Urun/UrunSil/@item.ProductID" class="btn btn-primary">Stoktan Düş</a></td>
        </tr>


    }

</table>
<a href="~/Urun/YeniUrun/" class="btn btn-info">Yeni Ürün Ekle</a>