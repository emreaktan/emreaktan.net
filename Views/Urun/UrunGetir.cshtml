@using MVCOnlineTicariOtomasyon.Models.Class
@model Product
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Ürün Güncelleme</h2>

<br />
@using(Html.BeginForm("UrunGuncelle","Urun",FormMethod.Post))
{ 
<form class="form-group" method="post">

    @Html.HiddenFor(x => x.ProductID)
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })

    <br />

    @Html.Label("Marka")
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })

    <br />

    @Html.Label("Stok Adedi")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })

    <br />

    @Html.Label("Alış Fiyatı")
    @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })

    <br />

    @Html.Label("Satış Fiyatı")
    @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })

    <br />

    @Html.Label("Durum")
    @Html.DropDownListFor(x => x.Status, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })

    <br />

    @Html.Label("Urun Gorsel")
    @Html.TextBoxFor(x => x.ProductImage, new { @class = "form-control" })

    <br />

    @Html.Label("Kategori")
    @*@Html.HiddenFor(x=>x.Category.CategoryID)*@
    @*@Html.TextBoxFor(x=>x.CategoryId,new { @class = "form-control" })*@
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })

    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>
}