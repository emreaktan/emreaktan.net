@using MVCOnlineTicariOtomasyon.Models.Class
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-hover" style="margin-top:20px;">

    <tr>
        <th>ID</th>
        <th>Departman Adı</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.DeparmentID
    </td>
    <td>
        @item.DeparmentName
    </td>
    <td>
        <a href="~/Department/DepartmanGetir/@item.DeparmentID" class="btn btn-info">GÜNCELLE</a>
    </td>

    <td>
        <a href="~/Department/DepartmanSil/@item.DeparmentID" class="btn btn-danger">SİL</a>
    </td>
    <td>
        <a href="~/Department/DepartmanDetay/@item.DeparmentID" class="btn btn-danger" style="background-color:lightcoral;color:black">Detaylar</a>
    </td>
</tr>
    }

</table>
<a href="~/Department/DepartmanEkle/" class="btn btn-outline-primary">Departman Ekle</a>

