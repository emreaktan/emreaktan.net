@using MVCOnlineTicariOtomasyon.Models.Class
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">

    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Güncelle</th>
        <th>Sil</th>


    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.CategoryID
    </td>
    <td>
        @item.CategoryName
    </td>
    <td>
        <a href="~/Category/KategoriGetir/@item.CategoryID" class="btn btn-info">GÜNCELLE</a>
    </td>

    <td>
        <a href="~/Category/KategoriSil/@item.CategoryID" class="btn btn-danger">SİL</a>
    </td>

</tr>
    }

</table>
<a href="~/Category/KategoriEkle/" class="btn btn-outline-primary">Kategori Ekle</a>